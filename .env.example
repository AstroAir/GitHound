# GitHound Environment Configuration
# Copy this file to .env and customize for your environment

# Application Configuration
GITHOUND_VERSION=0.1.0
GITHOUND_ENV=development
GITHOUND_DEBUG=true
GITHOUND_LOG_LEVEL=info

# Server Configuration
GITHOUND_WEB_HOST=0.0.0.0
GITHOUND_WEB_PORT=8000
GITHOUND_MCP_HOST=0.0.0.0
GITHOUND_MCP_PORT=3000

# Data Directories
GITHOUND_DATA_DIR=/app/data
GITHOUND_LOG_DIR=/app/logs
GITHOUND_CACHE_DIR=/app/cache

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_MCP_URL=redis://redis:6379/1
REDIS_MAX_CONNECTIONS=10
REDIS_TIMEOUT=30

# Security Configuration
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Configuration
API_RATE_LIMIT=100
API_RATE_LIMIT_PERIOD=60
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Git Configuration
GIT_DEFAULT_BRANCH=main
GIT_MAX_COMMIT_HISTORY=10000
GIT_TIMEOUT=300

# Search Configuration
SEARCH_MAX_RESULTS=1000
SEARCH_TIMEOUT=60
FUZZY_SEARCH_THRESHOLD=0.8

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Performance Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=300
MAX_CONCURRENT_SEARCHES=10

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Docker Build Configuration
BUILD_DATE=
VCS_REF=

# External Services (if needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/githound
# ELASTICSEARCH_URL=http://localhost:9200
# PROMETHEUS_URL=http://localhost:9090
