# GitHound Environment Configuration
# Copy this file to .env and customize for your environment
# For complete documentation, see: docs/configuration/environment-variables.md

# Application Configuration
GITHOUND_VERSION=0.1.0
GITHOUND_ENV=development
GITHOUND_DEBUG=true
GITHOUND_LOG_LEVEL=INFO

# Server Configuration
GITHOUND_WEB_HOST=localhost
GITHOUND_WEB_PORT=8000

# Data Directories
GITHOUND_DATA_DIR=./data
GITHOUND_LOG_DIR=./logs
GITHOUND_CACHE_DIR=./cache
GITHOUND_DEFAULT_REPO=

# MCP Server Configuration
FASTMCP_SERVER_NAME=GitHound MCP Server
FASTMCP_SERVER_VERSION=2.0.0
FASTMCP_SERVER_TRANSPORT=stdio
FASTMCP_SERVER_HOST=localhost
FASTMCP_SERVER_PORT=3000
FASTMCP_SERVER_LOG_LEVEL=INFO
FASTMCP_SERVER_ENABLE_AUTH=false
FASTMCP_SERVER_RATE_LIMIT_ENABLED=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MCP_URL=redis://localhost:6379/1
REDIS_MAX_CONNECTIONS=10
REDIS_TIMEOUT=30

# Security Configuration
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Authentication Providers (optional)
FASTMCP_SERVER_AUTH_GITHUB_CLIENT_ID=
FASTMCP_SERVER_AUTH_GITHUB_CLIENT_SECRET=
FASTMCP_SERVER_BASE_URL=http://localhost:8000

# JWT Authentication (optional)
FASTMCP_SERVER_AUTH_JWT_JWKS_URI=
FASTMCP_SERVER_AUTH_JWT_ISSUER=
FASTMCP_SERVER_AUTH_JWT_AUDIENCE=
FASTMCP_SERVER_AUTH_JWT_SECRET_KEY=

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
API_RATE_LIMIT=100/minute
SEARCH_RATE_LIMIT=10/minute
AUTH_RATE_LIMIT=5/minute
EXPORT_RATE_LIMIT=3/minute

# Search Engine Configuration
GITHOUND_MAX_RESULTS=1000
GITHOUND_MAX_WORKERS=4
GITHOUND_TIMEOUT=300
GITHOUND_FUZZY_THRESHOLD=0.8

# Cache Configuration
GITHOUND_CACHE_BACKEND=memory
GITHOUND_CACHE_TTL=3600
GITHOUND_CACHE_MAX_SIZE=1000

# Authorization Providers (optional)
PERMIT_MCP_API_KEY=
PERMIT_MCP_PROJECT_ID=
PERMIT_MCP_ENVIRONMENT_ID=
PERMIT_MCP_PDP_URL=http://localhost:7766
PERMIT_MCP_ENABLE_AUDIT_LOGGING=true

EUNOMIA_MCP_ENABLE_AUDIT_LOGGING=true
EUNOMIA_MCP_POLICY_PATH=

# Development Settings
GITHOUND_DEV_MODE=false
GITHOUND_AUTO_RELOAD=false
GITHOUND_PROFILE=false

# Testing Settings (for test environments)
GITHOUND_TEST_MODE=false
GITHOUND_TEST_DATA_DIR=./test_data
GITHOUND_MOCK_EXTERNAL_SERVICES=false

# Docker Build Configuration
GITHOUND_VERSION=latest
BUILD_DATE=
VCS_REF=

# Docker Compose Port Configuration
GITHOUND_WEB_PORT=8000
GITHOUND_MCP_PORT=3000
REDIS_PORT=6379
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
PROMETHEUS_PORT=9090

# Docker Compose Volume Paths
GITHOUND_DATA_PATH=./data
GITHOUND_LOGS_PATH=./logs

# External Services (if needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/githound
# ELASTICSEARCH_URL=http://localhost:9200
# PROMETHEUS_URL=http://localhost:9090
