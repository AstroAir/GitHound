{
  "mcpServers": {
    "githound-secure": {
      "command": "python",
      "args": ["-m", "githound.mcp_server", "--transport", "http"],
      "env": {
        "PYTHONPATH": "/path/to/githound",
        "FASTMCP_SERVER_NAME": "GitHound MCP Server (Secure)",
        "FASTMCP_SERVER_VERSION": "2.0.0",
        "FASTMCP_SERVER_TRANSPORT": "http",
        "FASTMCP_SERVER_HOST": "0.0.0.0",
        "FASTMCP_SERVER_PORT": "3001",
        "FASTMCP_SERVER_LOG_LEVEL": "DEBUG",
        "FASTMCP_SERVER_ENABLE_AUTH": "true",
        "FASTMCP_SERVER_RATE_LIMIT_ENABLED": "true",
        "PERMIT_MCP_API_KEY": "your-permit-api-key",
        "PERMIT_MCP_PROJECT_ID": "your-project-id",
        "PERMIT_MCP_ENVIRONMENT_ID": "production"
      },
      "description": "GitHound MCP Server with authentication and rate limiting enabled"
    },
    "githound-dev": {
      "command": "python",
      "args": ["-m", "githound.mcp_server"],
      "env": {
        "PYTHONPATH": "/path/to/githound",
        "FASTMCP_SERVER_NAME": "GitHound MCP Server (Development)",
        "FASTMCP_SERVER_VERSION": "2.0.0-dev",
        "FASTMCP_SERVER_TRANSPORT": "stdio",
        "FASTMCP_SERVER_LOG_LEVEL": "DEBUG",
        "FASTMCP_SERVER_ENABLE_AUTH": "false",
        "FASTMCP_SERVER_RATE_LIMIT_ENABLED": "false"
      },
      "description": "GitHound MCP Server for development with debug logging"
    }
  }
}
